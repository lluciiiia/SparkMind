{
    "manifest_version": 3,
    "name": "SparkMind Extenson",
    "description": "SparkMind is a platform designed to help you learn and excel in your field. With our interactive platform, you can learn new concepts, improve your skills, and compete against other users.",
    "version": "1.0.0",
    "action": {
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["assets/content.js"]
        }
    ],
    "host_permissions": ["https:\/\/*/*"],
    "permissions": ["tabs", "activeTab", "notifications", "scripting"]
}